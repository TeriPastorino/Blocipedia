%h1 
.media.media-body.media-heading
  = @wiki.title
%p 
= @wiki.body

.row
- if policy(@wiki).edit?
  = link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success'

- if policy(@wiki).destroy?
  = link_to "Delete Wiki", edit_wiki_path(@wiki), class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete the wiki? This can not be undone'}
