.row
  .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h1.panel-title
          Please Sign Up
      .panel-body
        %form{:role => "form"}
          .row

          = form_for @user do |f| 
            - if @user.errors.any?
            .alert.alert_danger
              %p "There was an error in your input, Try again"
              - for message_error in @user.errors.full_messages
                %li
                  * #{message_error}
            .form-group_tag 
              - user.errors?([:user][:name]) do
              = f.text_field :name, class: "form-control input-sm", placeholder: "Name" 

            .form-group_tag()
              = f.text_field :email, class: "form-control input-sm", placeholder: "Email Address" 

            .form-group_tag()
              = f.password_field :password, class: "form-control input-sm", placeholder: "Password" 

            .form-group_tag()
              = f.password_field :password_confirmation, class: "form-control input-sm", placeholder: "Password Confirmation" 
            
            .form-group
              = f.submit "Register", class: "btn btn-info.btn-block"







